<Window x:Class="Бюджет.NewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Бюджет"
        mc:Ignorable="d"
        Title="NewWindow" Height="230" Width="220">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="105*"/>
            <RowDefinition Height="109*"/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"></ColumnDefinition>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Content="Добавить новый тип записи" HorizontalAlignment="Center" Height="27" Grid.Row="2" VerticalAlignment="Center" Width="200" Click="Button_Click"/>
        <TextBox x:Name="Type_text" Grid.ColumnSpan="2" Grid.RowSpan="2" TextWrapping="Wrap" Text="" Margin="0,39,0,24"/>

    </Grid>
</Window>
